<div class="col-xs-12">
		<h4>食材詳細</h4>
		<table class="table">
			<tr>
				<td class="col-xs-3">カテゴリー</td>
				<td class="col-xs-3"><%= @food.category.name %></td>
			</tr>
			<tr>
				<th>食材名</th>
				<td><%= @food.name %></td>
			</tr>
			<tr>
				<th>数量</th>
				<td><%= @food.quantity %></td>
			</tr>
			<tr>
				<th>購入日</th>
				<td><%= @food.purchase_date.strftime("%Y/%m/%d") %></td>
			</tr>
			<tr>
				<th>賞味期限</th>
				<td><%= @food.expiry_date.strftime("%Y/%m/%d") %></td>
			</tr>
		</table>
		<% if @food.wish_list == false %>
			<%=link_to foods_wish_list_create_food_path(@food), method: :put do %><i class="far fa-star" aria-hidden="true"></i><% end %>
		<% else %>
			<%=link_to foods_wish_list_destroy_food_path(@food), method: :delete do %><i class="fas fa-star" aria-hidden="true"></i><% end %>
		<% end %>

		<%= link_to '編集', edit_food_path(@food) %>
		<%= link_to '一覧へ', foods_path %>
		<%= link_to '使い切った', @food, method: :delete, "data-confirm" => "使い切った食材は食材の一覧から削除されます。削除してもよろしいですか？" %>
	</div>
