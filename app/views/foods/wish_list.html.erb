<div class="col-xs-12">
	<h4>ほしいものリスト</h4>
	<hr>
	<div class="reload-button">
		<button class="btn btn-default", onclick="window.location.reload();"><i class="fas fa-redo-alt"></i></button>
	</div>

	<table class="table">
		<thead>				
			<tr>
				<th>食材</th>
				<th>数量</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @foods.each do |food| %>
				<tr>
					<td><%= link_to food_path(food) do %><%= food.name %><% end %></td>
					<td><%= food.quantity %></td>
					<td id="wish_list_btn-<%= food.id %>">
						<%= render 'foods/wish_list', food: food %></td>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<div style="text-align: center;">
		<%= paginate @foods %>
	</div>

	<hr style="margin: 40px 0;">
	
	<div class="link-button col-xs-12">
		<div class="row">
			<%= link_to foods_path do %><button class="btn btn-default col-xs-offset-1 col-xs-4"><i class="fas fa-angle-double-left"></i>&nbsp;&nbsp;一覧</button><% end %>
			<%= link_to new_food_path(@food) do %><button class="btn btn-default col-xs-offset-2 col-xs-4"><i class="fas fa-plus"></i>&nbsp;&nbsp;登録</button><% end %>
		</div>
	</div>
</div>