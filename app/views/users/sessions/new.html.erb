<div class="col-xs-12">
  <h4 class="user-signin">ログイン</h4>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group row">
      <%= f.label :メールアドレス, class: "col-xs-4" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "display: inline-block; width:auto;" %>
    </div>

    <div class="form-group row">
      <%= f.label :パスワード, class: "col-xs-4" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", style: "display: inline-block; width:auto;" %>
    </div>

    <div class="actions row">
      <button class="btn btn-warning col-xs-offset-4 col-xs-4", type="submit">ログイン</button>
    </div>
  <% end %>

  <div class="forget-password">
    <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %>
  </div>

  <h4 class="user-signup">初めてご利用の方はこちらから</h4>
    <div class="row">
      <%= link_to new_user_registration_path do %>
        <button class="btn btn-danger col-xs-offset-4 col-xs-4">新規登録</button>
      <% end %>
    </div>
</div>