
    <div class="col-xs-12">
      <h4 class="user-signup">新規会員登録</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group row">
          <%= f.label :ニックネーム, class: "col-xs-5" %>
          <%= f.text_field :name, class: "form-control", style: "display: inline-block; width:auto;" %>
        </div>

        <div class="form-group row">
          <%= f.label :メールアドレス, class: "col-xs-5" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "display: inline-block; width:auto;" %>
        </div>

        <div class="form-group row">
          <%= f.label :パスワード（6文字以上）, class: "col-xs-5" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", style: "display: inline-block; width:auto;" %>
        </div>

        <div class="form-group row">
          <%= f.label :パスワード（確認用）, class: "col-xs-5" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: "display: inline-block; width:auto;" %>
        </div>

        <div class="actions row">
          <button class="btn btn-danger col-xs-offset-5 col-xs-3", type="submit">新規登録</button>
        </div>
      <% end %>

      <h4 class="user-signin">登録済みの方はこちらから</h4>
        <div class="row">
          <%= link_to new_user_session_path do %>
            <button class="btn btn-warning col-xs-offset-5 col-xs-3" type="submit">ログイン</button>
          <% end %>
      </div>
    </div>
