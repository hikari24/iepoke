<div class="col-xs-12">
    <h4 >パスワード変更</h4>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

          <div class="form-group row">
            <%= f.label :password, "新しいパスワード（6文字以上）", class:"col-xs-4" %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control", style:"display: inline-block; width: 50%;" %>
            </div>

          <div class="form-group row">
            <%= f.label :password_confirmation, "新しいパスワード（確認用）", class:"col-xs-4" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", style:"display: inline-block; width: 50%;" %>
          </div>

          <div class="actions row">
            <button class="btn btn-warning col-xs-offset-4 col-xs-5", type="submit">パスワード
            を変更する</button>
          </div>

      <% end %>

</div>

