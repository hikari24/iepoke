<div class="col-xs-12">
	<h4>マイページ</h4>
		<table class="table">
			<tr>
				<th>ニックネーム</th>
				<td><%= @user.name %></td>
			</tr>
			<tr>
				<th>メールアドレス</th>
				<td><%= @user.email %></td>
			</tr>
		</table>
		<div class="edit-quit-button">
			<%= link_to edit_user_registration_path do %>
				<button class="btn btn-default", style="display: inline-block;">登録内容の変更</button>
			<% end %>
			<%= link_to users_quit_path do %>
