<div class="container">
	<div class="row">
		<h4>カテゴリー編集</h4>
			<%= form_with model: @category, local: true do |f| %>

			<div class="form-group">
				<%= f.label :カテゴリー, class: "col-xs-3" %>
				<%= f.text_field :name, class: "form-control col-xs-4", style: "display: inline-block; width: auto;"  %>
			</div>

			<div class="action">
				<button class="btn btn-warning col-xs-offset-1 col-xs-2", type="submit">保存</button>
			</div>
			<% end %>

			<div class="back col-xs-offset-8">

			<%= link_to categories_path do %>
			<button class="btn btn-default">一覧へ戻る</button>
			<% end %>
			</div>

	</div>
</div>